<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginBottom="5dp"
                                    card_view:cardCornerRadius="10dp">
    <ImageView
        android:id="@+id/ivItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="-83dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_toStartOf="@+id/tvTemp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textSizeExtraLarge" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:text="10,10,2000"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/textSizeLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_weather_wind_speed"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tvWindSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_weather_air_pressure"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tvAirPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tvTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivWeatherIcon"
            android:layout_centerHorizontal="true"
            android:text="10"
            android:textColor="@color/textColorPrimary"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/ivWeatherIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
